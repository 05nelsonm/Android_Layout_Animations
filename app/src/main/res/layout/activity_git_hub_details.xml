<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondaryLightColor"
        tools:context=".activity.ModuleDetailsActivity">

    <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_github_title"
                android:layout_marginTop="8dp"
                android:text="GitHub Repos"
                android:gravity="center"
                android:textSize="36sp"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <LinearLayout
                    android:id="@+id/ll_github_one"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_github_demo_one_title"
                        android:layout_weight="1"
                        android:text="Module Demo Repo:"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="24sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/btn_github_demo_one"
                        android:text="Copy Url"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:backgroundTint="@color/primaryDarkColor"
                        android:textColor="@color/primaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_github_demo_one_url"
                    android:text="https://github.com/"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="32dp"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/ll_github_two"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_github_demo_two_title"
                        android:layout_weight="1"
                        android:text="Module Demo Two Repo:"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="24sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/btn_github_demo_two"
                        android:text="Copy Url"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:backgroundTint="@color/primaryDarkColor"
                        android:textColor="@color/primaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_github_demo_two_url"
                    android:text="https://github.com/"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_github_guided_project_title"
                        android:layout_weight="1"
                        android:text="My Guided Project Repo:"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="24sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                <Button
                        android:id="@+id/btn_github_guided_project"
                        android:text="Copy Url"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:backgroundTint="@color/primaryDarkColor"
                        android:textColor="@color/primaryTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_github_guided_project_url"
                    android:text="https://github.com/"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>